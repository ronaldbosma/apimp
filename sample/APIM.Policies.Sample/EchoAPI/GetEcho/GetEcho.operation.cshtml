<policies>
    <inbound>
        <base />
    </inbound>

    <backend>
        <base />
    </backend>

    <outbound>
        <base />
        <choose>
            <when condition="@expression:APIM.Policies.Sample.EchoAPI.GetEcho.GetEchoExpressions.ResponseIsError">
                <set-body>Error</set-body>
            </when>
            <otherwise>
                <set-body>@expression:APIM.Policies.Sample.EchoAPI.GetEcho.GetEchoExpressions.TransformResponse</set-body>
            </otherwise>
        </choose>
    </outbound>
    
    <on-error>
        <base />
    </on-error>
</policies>