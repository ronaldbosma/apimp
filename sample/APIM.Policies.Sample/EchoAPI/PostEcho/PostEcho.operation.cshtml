<policies>
    <inbound>
        <base />
        <set-body>@expression:APIM.Policies.Sample.EchoAPI.PostEcho.PostEchoRequest.Transform</set-body>
    </inbound>

    <backend>
        <base />
    </backend>

    <outbound>
        <base />
        <choose>
            <when condition="@expression:APIM.Policies.Sample.EchoAPI.PostEcho.PostEchoConditions.ResponseIsBadRequest">
                <set-body>Bad Request</set-body>
            </when>
            <when condition="@expression:APIM.Policies.Sample.EchoAPI.PostEcho.PostEchoConditions.ResponseIsNotFound">
                <set-body>Not Found</set-body>
            </when>
            <otherwise>
                <set-body>@expression:APIM.Policies.Sample.EchoAPI.PostEcho.PostEchoResponse.Transform</set-body>
            </otherwise>
        </choose>
    </outbound>
    
    <on-error>
        <base />
    </on-error>
</policies>